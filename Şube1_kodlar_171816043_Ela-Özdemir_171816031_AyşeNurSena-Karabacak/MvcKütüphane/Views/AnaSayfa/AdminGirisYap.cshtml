
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V12</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/anasayfa/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/anasayfa/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/anasayfa/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/anasayfa/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/anasayfa/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/anasayfa/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/anasayfa/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/anasayfa/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/anasayfa/css/main.css">
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('~/anasayfa/images/img-01.jpg');">
            <div class="wrap-login100 p-t-190 p-b-30">

                @*<form action="/istatistik/Index" class="login100-form validate-form" method="post">*@
                @using (Html.BeginForm("AdminGirisYap", "AnaSayfa", FormMethod.Post))
                {
                    <div class="login100-form-avatar">
                        <img src="~/anasayfa/images/unnamed (1).jpg" alt="AVATAR">
                    </div>

                    <span class="login100-form-title p-t-20 p-b-45">
                        Gazi Üniversitesi Merkez Kütüphane Personel Giriş Ekranı
                    </span>

                    <div class="wrap-input100 validate-input m-b-10" data-validate="Username is required">
                        <input class="input100" type="text" name="PERSONEL" placeholder="Personel Adı">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                        <input class="input100" type="password" name="SIFRE" placeholder="Şifre">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn p-t-10">
                        <button class="login100-form-btn">
                          Giriş Yap
                        </button>
                    </div>

                    @*<div style="margin-top:15px" class="container-login100-form-btn p-t-10">
                <button class="btn btn-info" id="Btn1">Personel Ekle</button>

            </div>*@
                    @*<a href="/istatistik/Index/" class="btn btn-primary">Yeni Personel Ekle</a>*@

                    <div class="text-center w-full p-t-25 p-b-230">
                        <a href="#" class="txt1">
                            Kullanıcı Adı/Şifre Unuttum
                        </a>
                    </div>

                    @*<div class="text-center w-full">
                        <a class="txt1" href="#">
                            Create new account
                            <i class="fa fa-long-arrow-right"></i>
                        </a>
                    </div>*@
                    @*<button type="submit">Login </button>*@
                    @*</form>*@
                }
                </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/anasayfa/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/anasayfa/vendor/bootstrap/js/popper.js"></script>
    <script src="~/anasayfa/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/anasayfa/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/anasayfa/js/main.js"></script>

</body>
</html>