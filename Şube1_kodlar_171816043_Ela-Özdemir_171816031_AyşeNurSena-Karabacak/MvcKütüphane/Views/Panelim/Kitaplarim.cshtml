@using MvcKütüphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Kitaplarim";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}
<br />

<h2>Kitap Geçmişim</h2>
<br />
<table class="table table-bordered">
    <tr>

        <th>Kitap Adı</th>

        <th>Alış Tarihi</th>
        <th>Üye İade Tarihi</th>
        @*<th>İşlem Detayları </th>*@



    </tr>
   @foreach (var k in Model)
    {
        <tr>
            
            <td>@k.TBLKITAP.AD</td>
            
            <td>@Convert.ToDateTime(k.ALISTARIH).ToString("dd/MMM/yyyy")</td>
            <td>@Convert.ToDateTime(k.UYEGETIRTARIH).ToString("dd/MMM/yyyy")</td>

            
       </tr>
    }
</table>


